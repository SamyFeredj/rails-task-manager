<h1>My tasks</h1>
<div class="list">
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
    <li class="list-group-item task-item">
      <%= link_to task.title, task_path(task), class: "task-title" %>
      <%= link_to "🗑️", task_path(task), class: "delete", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
    <% end %>
  </ul>
</div>

<%= form_with url: task_new_path, method: :get do |form| %>
  <%= form.submit "Add", class: "btn btn-primary"%>
<% end %>
